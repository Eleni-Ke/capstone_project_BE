{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,

    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "types": ["./src/types/custom.d.ts"],
    "esModuleInterop": true,

    "experimentalDecorators": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/types/*"]
}
